    <div class="container">
        <h1>Ubah Format Teks</h1>

        <textarea id="textInput" placeholder="Masukkan teks di sini..."></textarea>

        <div class="button-group">
            <button onclick="convertText('uppercase')">üî† Kapital Semua</button>
            <button onclick="convertText('lowercase')">üî° Kecil Semua</button>
            <button onclick="convertText('titlecase')">üî§ Kapital Awal Kata</button>
        </div>

        <div class="footer">Dibuat dengan ‚ù§Ô∏è oleh Anda</div>
    </div>

    <script>
        function convertText(format) {
            let textArea = document.getElementById("textInput");
            let text = textArea.value;

            if (text.trim() === "") {
                alert("Masukkan teks terlebih dahulu!");
                return;
            }

            if (format === "uppercase") {
                textArea.value = text.toUpperCase();
            } else if (format === "lowercase") {
                textArea.value = text.toLowerCase();
            } else if (format === "titlecase") {
                textArea.value = text
                    .toLowerCase()
                    .split(" ")
                    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                    .join(" ");
            }
        }
    </script>
